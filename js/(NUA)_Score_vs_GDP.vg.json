{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Happiness Score vs GDP per capita in 2016",
      "subtitle": [
      "Explore the relationship between Happiness Score and GDP per capita",
        "Hint: Use mouse to zoom and pan and double-click to reset"
      ],
    "fontSize": 16,
    "anchor": "start"
  },
  "width": 300,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179-HW/Week-10-Homework/data/2016.csv"
  },
  "transform": [
    {"calculate": "datum['Freedom to make life choices'] * 100", "as": "Freedom of choice (%)"},
    {"calculate": "datum['Perceptions of corruption'] * 100", "as": "Government trust (%)"},
    {"filter": "datum['GDP per capita'] > GDP_selector"},
    {"filter": "Continent_selection == null || datum.Region == Continent_selection"}
  ],
  "params": [
    {"name": "view", "select": "interval", "bind": "scales"},
    {
      "name": "GDP_selector",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1.6,
        "step": 0.01,
        "name": "GDP per capita:"
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and Northern Africa",
          "Latin America and Caribbean",
          "Southeastern Asia",
          "Central and Eastern Europe",
          "Sub-Saharan Africa"
        ],
        "labels": [
          "Show All",
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and Northern Africa",
          "Latin America and Caribbean",
          "Southeastern Asia",
          "Central and Eastern Europe",
          "Sub-Saharan Africa"
        ],
        "name": "Continent:"
      }
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP per capita",
      "scale": {"type": "linear"},
      "title": "GDP per capita"
    },
    "y": {
      "field": "Score",
      "type": "quantitative",
      "scale": {"zero": false},
      "axis": {"tickCount": 8},
      "title": "Happiness Score"
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Continent",
      "scale": {
        "domain": [
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and Northern Africa",
          "Latin America and Caribbean",
          "Southeastern Asia",
          "Central and Eastern Europe",
          "Sub-Saharan Africa"
        ],
        "range": [
          "#1f77b4",
          "#ff7f0e",
          "#2ca02c",
          "#d62728",
          "#9467bd",
          "#8c564b",
          "#e377c2",
          "#7f7f7f"
        ]
      }
    },
    "opacity": {"value": 0.65},
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Overall rank", "type": "ordinal"},
      {"field": "Score", "type": "quantitative"},
      {
        "field": "Freedom of choice (%)",
        "type": "quantitative",
        "format": ".2f"
      },
      {"field": "Government trust (%)", "type": "quantitative", "format": ".2f"}
    ]
  },
  
  "config": {
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "orient": "right"
    }
  }
}


