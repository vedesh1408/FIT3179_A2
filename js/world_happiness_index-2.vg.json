{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 720,
  "height": 450,
  "title": {
    "text": "Happiness Index of Countries 2011-2019",
    "fontSize": 18,
    "color": "dodgerblue"
  },
  "projection": {
    "type": "equalEarth"
  },
  "params": [
    {
      "name": "Year_Filter",
      "value": [
        2011
      ],
      "bind": {
        "input": "range",
        "min": 2011,
        "max": 2019,
        "step": 1,
        "name": "Select year:"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179_A2/main/data/world-happiness-report-rank.csv"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179_A2/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray", "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179-HW/main/js/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179_A2/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "white"
      }
    },
    {
      "transform": [
        {
          "lookup": "Entity",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/AshtonLay1/FIT3179_Assignment2/main/dataset/ne_110m_admin_0_countries.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == Year_Filter"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Score",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "range": [
              "#A52A2A",
              "#FF0000",
              "#FF4500",
              "#FFA500",
              "#FFD700",
              "#ADFF2F",
              "#006400"
            ],
            "domain": [2, 3, 4, 5, 6, 7]
          }
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Score", "type": "quantitative", "title": "Happiness Score"}
        ]
      }
    }
  ]
}